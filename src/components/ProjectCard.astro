---
interface Props {
	title: string;
	description: string;
	image: string;
	tags: string[];
	href: string;
}

const { title, description, image, tags, href } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
	<img src={image} alt={title} class="w-full h-48 object-cover" />
	<div class="p-6">
		<h3 class="text-xl font-bold mb-2">{title}</h3>
		<p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
		<div class="flex flex-wrap gap-2 mb-4">
			{tags.map((tag) => (
				<span class="px-3 py-1 bg-purple-100 dark:bg-purple-900 text-purple-600 dark:text-purple-300 rounded-full text-sm">
					{tag}
				</span>
			))}
		</div>
		<a href={href} class="text-purple-600 hover:text-purple-700 font-medium">
			En savoir plus â†’
		</a>
	</div>
</article>